{
  "compilerOptions": {
    "resolveJsonModule": true,
    "target": "es6",
    "module": "esnext",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["node", "jest", "vuetify"]
  },
  "include": [
    "env.d.ts",
    "vite-env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "src/**/*.ts",
    "tests/**/*.ts",
    "tests/**/*.spec.ts"
  ],
  "exclude": ["node_modules"]
}
